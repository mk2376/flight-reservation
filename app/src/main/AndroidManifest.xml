<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flightreservation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconmain"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iconmain"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlightReservation">
        <activity android:name=".RezervacijaPotrjena"></activity>
        <activity android:name=".VnosPlacila" />
        <activity
            android:name=".FlyFromToActivity"
            android:label="Izbira destinacije"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddUserActivity"
            android:label="Dodaj potnika"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:label="Rezervacija leta">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>